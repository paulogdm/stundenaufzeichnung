{
  "name": "mayrhofer-stundenaufzeichnung",
  "version": "1.0.0",
  "description": "Mayrhofer Stundenaufzeichnung",
  "author": "Christoph Mayrhofer",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev-backend\" \"npm run dev-frontend\"",
    "start": "concurrently \"npm run serve-backend\" \"npm run serve-frontend\"",
    "dev-frontend": "cd ./client && node --inspect ../node_modules/nuxt/bin/nuxt dev",
    "dev-backend": "concurrently \"tsc -w\" \"cross-env NODE_ENV=development nodemon --inspect=3001 server/index.js --watch server\"",
    "start-frontend": "serve ./client/dist",
    "start-backend": "cross-env NODE_ENV=production node server/index.js",
    "build": "cd ./client && nuxt build",
    "generate": "cd ./client && nuxt generate"
  },
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "@nuxtjs/axios": "^5.0.0",
    "@types/koa-bodyparser": "^4.2.1",
    "axios": "^0.18.0",
    "class-transformer": "^0.2.0",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^0.5.2",
    "koa": "^2.5.2",
    "koa-bodyparser": "^4.2.1",
    "koa-combine-routers": "^4.0.2",
    "koa-router": "^7.4.0",
    "moment": "^2.23.0",
    "mongodb": "^3.1.10",
    "mysql": "^2.16.0",
    "nuxt": "^2.0.0",
    "reflect-metadata": "^0.1.12",
    "sqlite3": "^4.0.4",
    "ts-node": "^7.0.1",
    "typeorm": "^0.2.10",
    "typescript": "^3.2.2",
    "vue-property-decorator": "^7.2.0",
    "vuetify": "^1.2.4"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.11.0",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "sass-loader": "^7.1.0",
    "serve": "^10.1.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "ts-loader": "^5.3.2",
    "tslint": "^5.12.0"
  }
}
